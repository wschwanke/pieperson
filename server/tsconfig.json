{
  "compilerOptions": {
    "allowSyntheticDefaultImports": false,
    "target": "es5",
    "downlevelIteration": true,
    "importHelpers": true,
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": false,
    "checkJs": false,
    "lib": [
      "dom",
      "es2015",
      "es2016",
    ],
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "noImplicitReturns": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "outDir": "./public/dist",
    "baseUrl": ".",
  },
  "include": [
    "./server/**/*.ts",
    "./server/**/*.tsx",
    "./server/**/*.types.ts"
  ],
  "exclude": [
    "node_modules",
  ]
}