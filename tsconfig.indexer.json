{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "esModuleInterop": false,
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": false,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "typeRoots": [
      "./node_modules/@types",
      "./indexer/types.ts"
    ],
    "outDir": ".build/client",
    "paths": {},
  },
  "exclude": ["server", "client"]
}