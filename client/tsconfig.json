{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": false,
    "target": "es5",
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "baseUrl": "./",
    "typeRoots": [
      "../node_modules/@types",
      "./types.ts"
    ],
    "outDir": ".build/client",
    "paths": {
      "@Assets/*": ["assets/*"],
      "@Blocks/*": ["blocks/*"],
      "@Components/*": ["components/*"],
      "@Layout/*": ["layout/*"],
      "@Lib/*": ["lib/*"],
      "@Scenes/*": ["scenes/*"],
      "@Test/*": ["test/*"]
    },
    "plugins": [
      { "name": "typescript-tslint-plugin" }
    ]
  }
}